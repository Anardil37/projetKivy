<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Duet"
            BoxLayout:
        BoxLayout:
            BoxLayout:
            BoxLayout:
            BoxLayout:
        BoxLayout:
            Button:
                text: 'Play'
                on_press: root.manager.current = 'level'
